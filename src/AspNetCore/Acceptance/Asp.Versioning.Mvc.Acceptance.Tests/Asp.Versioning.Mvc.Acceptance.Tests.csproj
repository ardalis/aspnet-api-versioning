<Project Sdk="Microsoft.NET.Sdk">

 <PropertyGroup>
  <TargetFrameworks>net6.0;netcoreapp3.1</TargetFrameworks>
  <RootNamespace>Asp.Versioning</RootNamespace>
 </PropertyGroup>

 <PropertyGroup>
  <RuntimeCompilationVersion>6.0.4-*</RuntimeCompilationVersion>
